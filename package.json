{
  "name": "app-jeux-soiree",
  "version": "1.0.0",
  "description": "Multiplayer party game application",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install:all": "npm install && cd client && npm install && cd .."
  },
  "keywords": [
    "party",
    "games",
    "multiplayer",
    "cards",
    "websockets"
  ],
  "author": "Th√©o",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.5.4",
    "uuid": "^9.0.0",
    "qrcode": "^1.5.3",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.0.1"
  }
}
